<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pjcart.shop.mapper.MemberMapper">
    <insert id="registerMember">
        INSERT INTO member(m_email,m_pwd,m_name,m_phone,m_add,m_detailadd,m_regdate)
        VALUES (#{m_email},#{m_pwd},#{m_name},#{m_phone},#{m_add},#{m_detailadd},now())
    </insert>

    <select id="getMemberByEmail" resultType="com.pjcart.shop.dto.MemberDTO">
        SELECT *
        FROM member
        WHERE m_email = #{m_email}
    </select>

    <select id="emailCheck" resultType="Integer">
        SELECT COUNT(m_email)
        FROM member
        WHERE m_email = #{m_email}
    </select>
</mapper>